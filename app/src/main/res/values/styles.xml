<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="progressBarStyle" parent="@style/Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:indeterminateDrawable">@drawable/progress_bar_drawable</item>
    </style>

    <style name="AlertDialogCustom" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorPrimary">@color/colorAccent</item>
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

    <style name="TimePickerDark" parent="Platform.MaterialComponents.Light">
        <item name="android:timePickerMode">spinner</item>
        <item name="android:numbersTextColor">@color/colorAccent</item>
        <item name="android:numbersSelectorColor">@color/colorSecondary</item>
        <item name="android:numbersBackgroundColor">@color/colorPrimary</item>
    </style>

</resources>
